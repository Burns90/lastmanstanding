{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "outDir": "./lib",
    "baseUrl": "..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "skipDefaultLibCheck": true
  },
  "include": ["*.ts", "../shared/**/*.ts"],
  "exclude": ["node_modules", "lib"]
}
